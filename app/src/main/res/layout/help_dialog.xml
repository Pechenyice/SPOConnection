<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profileHelpXML"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/forms_example">


    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"
        >
        <ImageView
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:id="@+id/helpDialogImage"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/rating"
            >

        </ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="15dp"
        >
        <TextView
            android:id="@+id/helpDialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Профиль"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="24dp"
            android:textColor="@color/greyColor">

        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="15dp"
        >
        <TextView
            android:id="@+id/helpDialogText"
            android:minHeight="150dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="Просматривайте актуальную информацию о парах за сегодня"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="20dp"
            android:textColor="@color/greyColor">

        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="15dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/helpDialogHandler1"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:src="@drawable/circle_active"
                />
            <ImageView
                android:id="@+id/helpDialogHandler2"
                android:layout_marginLeft="5dp"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:src="@drawable/circle"
                />
            <ImageView
                android:id="@+id/helpDialogHandler3"
                android:layout_marginLeft="5dp"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:src="@drawable/circle"
                />
            <ImageView
                android:id="@+id/helpDialogHandler4"
                android:layout_marginLeft="5dp"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:src="@drawable/circle"
                />
            <ImageView
                android:id="@+id/helpDialogHandler5"
                android:layout_marginLeft="5dp"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:src="@drawable/circle"
                />
            <ImageView
                android:id="@+id/helpDialogHandler6"
                android:layout_marginLeft="5dp"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:src="@drawable/circle"
                />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >
        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/helpDialogNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/backgroundMainColor"
            android:fontFamily="@font/montserrat_light"
            android:background="@drawable/pink_example"
            android:textSize="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="40dp"
            android:paddingLeft="40dp"
            android:text="Далее">
            
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="30dp"
        >
        <TextView
            android:id="@+id/helpDialogCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="Я программист, кого вы учите"
            android:fontFamily="@font/montserrat_light"
            android:textSize="16dp"
            android:textColor="@color/greyColor"
            android:background="@drawable/dialog_text_underlined">

        </TextView>
    </RelativeLayout>

</LinearLayout>